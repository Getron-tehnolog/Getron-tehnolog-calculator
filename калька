print("Это калькулятор. Он может выполнять простые вычисления.")
print("Хотите ли вы узнать его функции?")
Germany = input()
if Germany == "Да" or Germany == "да":
    print("Для сложения нужно нужно ввести '+'")
    print("Для вычетания нужно ввести '-'")
    print("Для умножения нужно ввести '*'")
    print("Для деления нужно ввести '/'")
    print("Для целочисленного деления нужно ввести '//'")
    print("Для взятия остатка нужно ввести '%'")
    print("Для возведение в степень нужно ввести '**'")
    print("Для квадратного корня из числа нужно ввести '☭'")
    print("Для того, чтобы перевести число из любой системы счисления в десятичную нужно ввести 'ツ'")
    print("Для анализа числа нужно ввести 'анализ'")
elif Germany == "Нет" or Germany == "нет":
    print("хорошо")
print("желаете ли вы выполнить действие?")
answer = input()
while answer == "Да" or answer == "да":
    a = input("Введите первое число")
    warthunder = input("Введите действие")
    if warthunder == "☭":
        a = int(a)
        print("Квадратный корень из", a, "=", a ** 0.5)
    elif warthunder == "ツ":
        bismark = int(input("Введите в какой системе счисления это число"))
        tiger = 1
        vk3002m = 0
        for sturmtiger in a[::-1]:
            if sturmtiger < "A":
                vk3002m = vk3002m + (int(sturmtiger) * tiger)
            else:
                vk3002m = vk3002m + ((ord(sturmtiger) - ord("A") + 10) * tiger)
            tiger = tiger * bismark
        print("Число", a, "В десятичной системе счисления будет", vk3002m)
    elif warthunder == "анализ":
        if warthunder == "анализ":
            luger = int(a)
            Jagdpanzer = 1
            luger //= 10
            while luger > 0:
                luger //= 10
                Jagdpanzer +=1
            print("В числе", Jagdpanzer, "разряд (-а /-ов")
        if warthunder == "анализ":
            panzercampfwagen4H = int(a)
            if panzercampfwagen4H // 2:
                print(panzercampfwagen4H, "чётное")
            else:
                print(panzercampfwagen4H, "нечётное")
        if warthunder == "анализ":
            ME262A1 = int(a)
            waffentrager = 0
            while ME262A1 != 0:
                nashorn = ME262A1 % 10
                waffentrager = waffentrager + nashorn
                ME262A1 = ME262A1 // 10
            print("Сумма цифр этого числа равна", waffentrager)
        if warthunder == "анализ":
            panzercampfwagen3J1 = True
            panzercampfwagen3F = int(a)
            panzercampfwagen4F2 = 2
            while panzercampfwagen4F2 < panzercampfwagen3F:
                if panzercampfwagen3F % panzercampfwagen4F2 == 0:
                    panzercampfwagen3J1 = False
                panzercampfwagen4F2 += 1
            if panzercampfwagen3J1:
                print("Это число простое")
            else:
                print("Это число сложное")
        if warthunder == "анализ":
            leopard = 0
            Adolf = int(a)
            maus = False
            while leopard < Adolf and maus != True:
                if leopard * leopard == Adolf:
                    maus = True
                leopard += 1
            if maus:
                print("Это число является квадратом числа", leopard)
            else:
                print("Это число не является квадратом")
        if warthunder == "анализ":
            mauser = 0
            Hitler = False
            Mussolini = int(a)
            while mauser < Mussolini and Hitler != True:
                if mauser * mauser * mauser == Mussolini:
                    Hitler = True
                mauser += 1
            if Hitler:
                print("Это число является кубом числа", mauser)
            else:
                print("Это число не является кубом")
    else:
        b = input("Введите второе число")
        if warthunder == "+":
            a = int(a)
            b = int(b)
            print(a, "+", b, "=", a + b)
        elif warthunder == "-":
            a = int(a)
            b = int(b)
            print(a, "-", b, "=", a - b)
        elif warthunder == "*":
            a = int(a)
            b = int(b)
            print(a, "*", b, "=", a * b)
        elif warthunder == "/":
            a = int(a)
            b = int(b)
            if b == 0:
                print("на ноль делить нельзя")
            print(a, "/", b, "=", a / b)
        elif warthunder == "//":
            a = int(a)
            b = int(b)
            if b == 0:
                print("на ноль делить нельзя")
            print(a, "//", b, "=", a // b)
        elif warthunder == "%":
            a = int(a)
            b = int(b)
            if b == 0:
                print("на ноль делить нельзя")
            print(a, "%", b, "=", a % b)
        elif warthunder == "**":
            a = int(a)
            b = int(b)
            print(a, "**", b, "=", a ** b)
        else:
            print("нет такого действия")
    print("желаете ли вы выполнить еще действие?")
    answer = input()
print("Спасибо за использование моего калькулятора, до скорых встреч!")
